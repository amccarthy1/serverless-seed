{
  "name": "serverless-seed",
  "version": "0.2.1",
  "description": "A Serverless plugin for optimizing deploys in Seed",
  "main": "index.js",
  "author": {
    "name": "Anomaly Innovations",
    "url": "https://anoma.ly"
  },
  "license": "MIT",
  "scripts": {
    "publish": "npm publish && git push --follow-tags",
    "lint": "eslint . --fix --ext .js,.ts",
    "test": "jest --no-watchman"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/helpers/setup-tests.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seed-run/serverless-seed.git"
  },
  "dependencies": {
    "serverless": "^2.14.0"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
